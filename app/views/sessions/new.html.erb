<% provide(:title, "Ingresar") %>
<h1>Ingresar</h1>
<div class="row">
   <div class="col-md-6 col-md-offset-3">
      <%= form_with(url: login_path, scope: :session, local:
         true) do |f| %>
      <%= f.label :"Email" %>
      <%= f.email_field :email, class: 'form-control' %>
      <%= f.label :"Password" %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.submit "Ingresar", class: "btn btn-primary" %>
      <% end %>
      <p>Usuario nuevo? <%= link_to "Registrarse", signup_path %></p>
   </div>
</div>
